# Telegram (Telethon)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
# One of the following is required (prefer session string for headless):
# TELEGRAM_SESSION_STRING=  # Generated from Telethon; see README
# Or a path for local session file (interactive login on first run):
TELEGRAM_SESSION_PATH=.telegram.session

# Which chat to watch: username, invite link, numeric ID, or 'me'
TELEGRAM_WATCH_SOURCE=

# Cloudflare R2
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=

# Worker public base URL (e.g., https://your-worker.subdomain.workers.dev)
WORKER_PUBLIC_BASE_URL=

# Pipeline configuration
WORKDIR=./workdir
FFMPEG_PATH=ffmpeg
HLS_SEGMENT_TIME=6
MULTIBITRATE=true
CLEANUP=true
TELETHON_PART_SIZE_KB=512  # optional: tune Telegram download chunk size

# Optional: upload key prefix root (defaults to 'videos')
R2_KEY_ROOT=videos

# Logging
LOG_LEVEL=INFO
